<Window x:Class="CombinedGestures.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CombinedGestures"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <InkCanvas Name="DrawingCanvas"
               EditingMode="GestureOnly"
               StylusInAirMove="DrawingCanvas_OnStylusInAirMove"
               StylusMove="DrawingCanvas_OnStylusMove"
               Gesture="DrawingCanvas_OnGesture">
    </InkCanvas>
</Window>
